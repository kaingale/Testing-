<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="CrossBrowserParallelSuite" thread-count="2" parallel="tests">
	<listeners>
		<listener class-name="com.utilities.ExtentReportManager" />
		<listener class-name="com.utilities.RetryListener" />
	</listeners>

	<!-- Chrome Tests -->
	<test name="Test-Chrome-1">
		<parameter name="os" value="Windows" />
		<parameter name="browser" value="chrome" />
		<classes>
			<class
				name="com.tests.scenario2.TC_01_LoginFunc_LoginUsingValidCredsTest" />
		</classes>
	</test>
	<test name="Test-Chrome-2">
		<parameter name="os" value="Windows" />
		<parameter name="browser" value="chrome" />
		<classes>
			<class
				name="com.tests.scenario2.TC_02_LoginFunc_LoginUsingInValidCredsTest" />
		</classes>
	</test>


	<!-- Edge Tests -->

	<test name="Test-Edge-2">
		<parameter name="os" value="Windows" />
		<parameter name="browser" value="edge" />
		<classes>
			<class
				name="com.tests.scenario10.TC_01_AdvFilteringFunc_ValidAdvancedProductFilteringFunctionalityTest" />
		</classes>
	</test>

	<test name="Test-Edge-3">
		<parameter name="os" value="Windows" />
		<parameter name="browser" value="edge" />
		<classes>
			<class
				name="com.tests.scenario1.TC_001_RegistrationFunc_ValidCredRegistrationOnlyMandatoryFieldsTest" />
		</classes>
	</test>
</suite> 
